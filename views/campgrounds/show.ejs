<% layout ('layouts/boilerplate') %>
    <h1><%= campground.title %></h1>
    <ul>        
        <li>Price: <%= campground.price %> </li>
        <li>Location: <%= campground.location %></li>
        
    </ul>
    <a href="/campgrounds">Back to list of all campgrounds</a>
    
    <a href="/campgrounds/new">Submit a new campground</a>
    <a href="/campgrounds/<%=campground._id%>/edit">Edit Campground</a>
    <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
        <button type="submit">Delete Campground</button>
    </form>